package np.edu.deerwalk;

public class InternationalPlane extends Planes{
	
	private int minimum_age;
	private boolean passport_required;
	
	public InternationalPlane() {
		
	}
	
	public InternationalPlane(int minimum_age, boolean passport_required) {
		this.setMinimum_age(minimum_age);
		this.setPassport_required(passport_required);
	}

	public int getMinimum_age() {
		return minimum_age;
	}

	public void setMinimum_age(int minimum_age) {
		this.minimum_age = minimum_age;
	}

	public boolean isPassport_required() {
		return passport_required;
	}

	public void setPassport_required(boolean passport_required) {
		this.passport_required = passport_required;
	}
	
	@Override
	void showData() {
		super.showData();
		System.out.println("Minimum Age : " + minimum_age);
		System.out.println("Passport Required : " + passport_required);
	}
	
	@Override
	void setData() {
		super.setData();
		System.out.print("Enter the minimum age : ");
		minimum_age = super.intScanner.nextInt();
		System.out.print("Is the passport required(y/n) : ");
		String yorn = super.strScanner.next();
		passport_required = yorn.equals("y");
	}
	

	
}
